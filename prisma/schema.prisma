generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["linux-musl", "windows" , "darwin-arm64"] 
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Category {
  id          String    @id @default(uuid())
  name        String
  description String?
  products    Product[]

  @@map("categories")
}

model Supplier {
  id       String    @id @default(uuid())
  name     String
  contact  String
  email    String
  phone    String
  address  String
  products Product[] @relation("SupplierProducts")
  orders   Order[]

  @@map("suppliers")
}

model Order {
  id         String      @id @default(uuid())
  date       DateTime
  supplierId String
  supplier   Supplier    @relation(fields: [supplierId], references: [id])
  items      OrderItem[]

  @@map("orders")
}

model OrderItem {
  id         String          @id @default(uuid())
  orderId    String
  productId  String
  quantity   Int
  unit_price Decimal
  status     OrderItemStatus
  createdAt  DateTime        @default(now())
  updatedAt  DateTime        @updatedAt
  order      Order           @relation(fields: [orderId], references: [id])
  product    Product         @relation(fields: [productId], references: [id])

  @@index([orderId], name: "idx_orderId")
  @@index([productId], name: "idx_productId")
  @@map("order_items")
}

enum OrderItemStatus {
  PENDENTE
  ENVIADO
  ENTREGUE
  CANCELADO
}


model Product {
  id                String      @id @default(uuid())
  code              Int         @default(autoincrement())
  name              String
  description       String?
  price             Float
  quantity_in_stock Int
  categoryId        String
  category          Category    @relation(fields: [categoryId], references: [id])
  suppliers         Supplier[]  @relation("SupplierProducts")
  orders            OrderItem[]

  @@index([categoryId], name: "idx_categoryId")
  @@map("products")
}

model User {
  id             String  @id @default(uuid())
  name           String
  email          String  @unique
  role           UserRole @default(OPERADOR)
  googleId       String? @unique
  avatar_url     String?

  @@map("users")
}

enum UserRole {
  ADMIN
  CLIENTE
  FORNECEDOR
  OPERADOR
}